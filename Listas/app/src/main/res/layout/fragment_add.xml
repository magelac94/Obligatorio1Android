<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".views.add.AddFragment">

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:textAlignment="center"
        android:hint="@string/add_fragment_hint"

        />

    <TextView
        android:id="@+id/spinner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/spinner_category"
        android:padding="16dp"
        android:text="@string/title_categories">
    </TextView>

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/input"
        android:layout_alignParentRight="true"
        android:padding="16dp">
    </Spinner>

    <TextView
        android:id="@+id/spinner_text_prio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_category"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/spinner_prio"
        android:padding="16dp"
        android:text="@string/title_prioridad">
    </TextView>

    <Spinner
        android:id="@+id/spinner_prio"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_category"
        android:layout_alignParentRight="true"
        android:padding="16dp">
    </Spinner>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:layout_below="@id/spinner_prio"
        android:padding="16dp"
        android:text="@string/add_fragment_add" />

</RelativeLayout>